[
    {
        "hosts": "biab",
        "remote_user": "root",
        "tasks": [
            {
                "name": "add x2go user",
                "user": {
                    "name": "x2go",
                    "comment": "X2GO User",
                    "group": "users",
                    "groups": "sudo",
                    "generate_ssh_key": "yes",
                    "shell": "/bin/bash"
                }
            },
            {
                "name": "install aptitude",
                "apt": {
                    "name": "aptitude",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install dirmngr",
                "apt": {
                    "name": "dirmngr",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install apt-transport-https",
                "apt": {
                    "name": "apt-transport-https",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "add x2go repo key",
                "apt_key": {
                    "keyserver": "keys.gnupg.net",
                    "id": "E1F958385BFE2B6E"
                }
            },
            {
                "name": "add node repo key",
                "apt_key": {
                    "keyserver": "keys.gnupg.net",
                    "id": "1655A0AB68576280"
                }
            },
            {
                "name": "add mist repo key",
                "apt_key": {
                    "keyserver": "keyserver.ubuntu.com",
                    "id": "1C52189C923F6CA9"
                }
            },
            {
                "name": "add microsoft repo key",
                "apt_key": {
                    "keyserver": "keyserver.ubuntu.com",
                    "id": "EB3E94ADBE1229CF"
                }
            },
            {
                "name": "add x2go repo",
                "apt_repository": {
                    "repo": "deb http://packages.x2go.org/debian stretch extras main",
                    "state": "present"
                }
            },
            {
                "name": "add node repo",
                "apt_repository": {
                    "repo": "deb https://deb.nodesource.com/node_9.x stretch main",
                    "state": "present"
                }
            },
            {
                "name": "add ethereum repo",
                "apt_repository": {
                    "repo": "deb http://ppa.launchpad.net/ethereum/ethereum/ubuntu xenial main",
                    "state": "present"
                }
            },
            {
                "name": "add visual studio repo",
                "apt_repository": {
                    "repo": "deb https://packages.microsoft.com/repos/vscode stable main",
                    "state": "present",
                    "update_cache": "yes"
                }
            },
            {
                "name": "upgrade all",
                "apt": {
                    "update_cache": "yes",
                    "upgrade": "yes"
                }
            },
            {
                "name": "install mist",
                "apt": {
                    "deb": "https://github.com/ethereum/mist/releases/download/v0.9.3/Mist-linux64-0-9-3.deb"
                }
            },
            {
                "name": "install mate-desktop",
                "apt": {
                    "name": "mate-desktop",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install x2goserver",
                "apt": {
                    "name": "x2goserver",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install mate-session-manager",
                "apt": {
                    "name": "mate-session-manager",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install mate-applets",
                "apt": {
                    "name": "mate-applets",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install mate-backgrounds",
                "apt": {
                    "name": "mate-backgrounds",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install mate-control-center",
                "apt": {
                    "name": "mate-control-center",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install mate-desktop-environment",
                "apt": {
                    "name": "mate-desktop-environment",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install dconf-cli",
                "apt": {
                    "name": "dconf-cli",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install ethereum",
                "apt": {
                    "name": "ethereum",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install nodejs",
                "apt": {
                    "name": "nodejs",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install visual studio code",
                "apt": {
                    "name": "code",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install git",
                "apt": {
                    "name": "git",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "install firefox-esr",
                "apt": {
                    "name": "firefox-esr",
                    "state": "installed",
                    "allow_unauthenticated": "yes"
                }
            },
            {
                "name": "ensure local .config/autostart exists",
                "file": {
                    "path": "/home/x2go/.config/autostart",
                    "recurse": "yes",
                    "state": "directory",
                    "owner": "x2go"
                }
            },
            {
                "name": "ensure local Desktop",
                "file": {
                    "path": "/home/x2go/Desktop",
                    "recurse": "yes",
                    "state": "directory",
                    "owner": "x2go"
                }
            },
            {
                "name": "copy check_wallpaper.sh",
                "copy": {
                    "src": "./files/check_wallpaper.sh",
                    "dest": "/usr/local/bin",
                    "mode": "755"
                }
            },
            {
                "name": "copy check_wallpaper.desktop",
                "copy": {
                    "src": "./files/check_wallpaper.desktop",
                    "dest": "/home/x2go/.config/autostart",
                    "owner": "x2go",
                    "group": "users"
                }
            },
            {
                "name": "copy wallpaper.jpg",
                "copy": {
                    "src": "./files/wallpaper.jpg",
                    "dest": "/home/x2go",
                    "owner": "x2go",
                    "group": "users"
                }
            },
            {
                "name": "ensure local docs",
                "file": {
                    "path": "/home/x2go/docs",
                    "recurse": "yes",
                    "state": "directory",
                    "owner": "x2go"
                }
            },
            {
                "name": "copy show_docs.sh",
                "copy": {
                    "src": "./files/show_docs.sh",
                    "dest": "/usr/local/bin",
                    "mode": "755"
                }
            },
            {
                "name": "copy show_docs.desktop",
                "copy": {
                    "src": "./files/show_docs.desktop",
                    "dest": "/home/x2go/.config/autostart",
                    "owner": "x2go",
                    "group": "users"
                }
            },
            {
                "name": "copy docs",
                "copy": {
                    "src": "./files/docs/",
                    "dest": "/home/x2go/docs",
                    "owner": "x2go",
                    "group": "users"
                }
            },
            {
                "name": "copy Mist.desktop",
                "copy": {
                    "src": "./files/Mist.desktop",
                    "dest": "/home/x2go/Desktop",
                    "owner": "x2go",
                    "group": "users"
                }
            },
            {
                "name": "fix sudoers",
                "lineinfile": {
                    "path": "/etc/sudoers",
                    "state": "present",
                    "regexp": "^%sudo",
                    "line": "%sudo ALL=NOPASSWD: ALL"
                }
            },
            {
                "name": "copy geth.service",
                "copy": {
                    "src": "./files/geth.service",
                    "dest": "/lib/systemd/system"
                }
            },
            {
                "name": "copy geth default",
                "copy": {
                    "src": "./files/geth.default",
                    "dest": "/etc/default/geth"
                }
            },
            {
                "name": "copy start_geth",
                "copy": {
                    "src": "./files/start_geth",
                    "dest": "/usr/local/sbin/start_geth",
                    "mode": "755"
                }
            },
            {
                "name": "copy run_mist",
                "copy": {
                    "src": "./files/run_mist",
                    "dest": "/usr/local/bin/run_mist",
                    "mode": "755"
                }
            },
            {
                "name": "set network",
                "lineinfile": {
                    "path": "/etc/default/geth",
                    "state": "present",
                    "regexp": "^NETWORK=",
                    "line": "NETWORK={{ ethereum_network }}"
                }
            },
            {
                "name": "set network id",
                "lineinfile": {
                    "path": "/etc/default/geth",
                    "state": "present",
                    "regexp": "^NETWORK_ID=",
                    "line": "NETWORK_ID={{ ethereum_network_id }}"
                }
            },
            {
                "name": "set private blockchain pwd",
                "lineinfile": {
                    "path": "/home/x2go/.ethereumpwd",
                    "state": "present",
                    "create": "yes", 
                    "owner": "x2go", 
                    "group": "users", 
                    "insertafter": "EOF",
                    "line": "{{ ethereum_password }}"
                }
            },
            {
                "name": "install truffle",
                "npm": {
                    "name": "truffle@latest",
                    "global": "yes"
                }
            },
            {
                "name": "fugly visual studio fix - grrrrrr",
                "command": "sed -i 's/BIG-REQUESTS/_IG-REQUESTS/' /usr/lib/x86_64-linux-gnu/libxcb.so.1"
            },
            {
                "name": "fire up geth",
                "systemd": {
                    "name": "geth",
                    "masked": "no",
                    "enabled": "yes",
                    "state": "started",
                    "daemon_reload": "yes"
                }
            }
        ]
    }
]
